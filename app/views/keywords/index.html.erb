<h1>Keyword List</h1>
<table>
  <thead>
    <tr>
      <th>Keyword</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @keywords.each do |keyword| %>
  		<tr>
  			<td><%= keyword.text %></td>
  			<td><%= keyword.created_at.strftime("%d/%m/%Y %H:%M") %></td>
  			<td><%= keyword.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
  			<td><%= link_to 'Show', keyword %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td
  		</tr>
  	<% end %>
  </tbody>
</table>
<br>
<br>
<a class = "btn-submit" href='/keywords/new'>Add new keyword</a>

<%= link_to "Edit Sleep Period", edit_sleep_path(Sleep.first), class: "btn-submit"%>

